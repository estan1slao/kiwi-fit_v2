                    <Frame  BackgroundColor="#3A6A3A" CornerRadius="40" RelativeLayout.HeightConstraint="75" RelativeLayout.WidthConstraint="370"/>
                    <Image x:Name="im21" RelativeLayout.HeightConstraint="69" RelativeLayout.WidthConstraint="62" 
