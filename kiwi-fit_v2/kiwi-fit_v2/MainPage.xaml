<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kiwi_fit_v2.MainPage">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image x:Name="loadingPicture"/>
        <RelativeLayout>
            <Button Text = "Начать" FontSize="25" FontFamily="Ubuntu" TextColor="#3F3F3F" 
                    CornerRadius="11" BackgroundColor="#68ED76" Clicked="OnButtonClicked"
             RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToParent, 
                Property=Width, Factor=0.5, Constant=-138}" 
             RelativeLayout.YConstraint= "{ConstraintExpression Type=RelativeToParent,
                Property=Height, Factor=0, Constant=639}"
             RelativeLayout.HeightConstraint="82" 
             RelativeLayout.WidthConstraint="282"/>
        </RelativeLayout>
    </Grid>
     
</ContentPage>
