                    <Ellipse Fill="#68ED76" WidthRequest="25" HeightRequest="9" Margin="140, 550, 0, 0"/>
                    <Ellipse Fill="#68ED76" WidthRequest="25" HeightRequest="9" Margin="170, 550, 0, 0"/>
                    <Ellipse Fill="#68ED76" WidthRequest="25" HeightRequest="9" Margin="200, 550, 0, 0"/>
                    <Ellipse Fill="#2B6130" WidthRequest="25" HeightRequest="9" Margin="230, 550, 0, 0"/>
                    <Ellipse Fill="#68ED76" WidthRequest="25" HeightRequest="9" Margin="260, 550, 0, 0"/>
                    <Ellipse Fill="#68ED76" WidthRequest="25" HeightRequest="9" Margin="290, 550, 0, 0"/>
                </RelativeLayout>

